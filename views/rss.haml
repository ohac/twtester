!!! XML
%rss{:version=>"2.0"}
  %channel
    %title twtester
    %link= baseurl
    %description twtester
    %language en
    - timeline.reverse.each do |tweet|
      - user = tweet['user']
      %item
        - date = Time.now # TODO
        %pubDate= date.strftime('%a, %d %b %Y %H:%M:%S %z')
        - url = "#{baseurl}" # TODO permalink
        %guid{:isPermaLink => true}= url
        %link= url
        %title= h user['screen_name']
        %description= h tweet['text']
